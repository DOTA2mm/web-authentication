<%- include('./common/header') %>
    <link rel='stylesheet' href='/css/bootstrap-social.css' />
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h1 class="page-header">优品股票通<small>UPChina</small></h1>
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">请登录</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="用户名" name="username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="密码" name="password" type="password">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6 text-left">
                                            <span class="text-danger">第三方账号登录：</span>
                                        </div>
                                        <div class="col-md-6 text-right">
                                            <a id="thirdpart" href="javascript:;" class="btn btn-social-icon btn-info"><i class="glyphicon glyphicon-cloud"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <a id="login" href="javascript:;" class="btn btn-lg btn-success btn-block">登录</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./common/jslib') %>
    <script src="/js/login.js"></script>
    <%- include('./common/footer') %>
